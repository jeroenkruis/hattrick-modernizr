.counter
	width 300px
	margin auto
	background #9b59b6
	color white
	padding 20px
	text-align center
	h1
		margin 0
		padding 20px
		font-size 36px
		color #FFFFFF
	button
		background #F1C40F
		border 0
		box-shadow 0px 5px 0px darken(#F1C40F, 20%)
		padding 20px
		width 100%
		outline none
		border-radius 4px
		color darken(#8E44AD, 10%)
		font-weight bold
		font-size 22px
